<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#009688"
        android:padding="20dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Calculation Details"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:background="#fefefe"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:textSize="20sp"
                android:textColor="#009688"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="normal"
                android:text="Semester(passed)"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="2dp"/>

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textSize="20sp"
                android:textColor="#009688"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/completed1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >


            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="2dp"
                android:paddingBottom="8dp"
                android:text="Grade(current)"
                android:textColor="#009688"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#009688"
                android:textStyle="bold"
                android:id="@+id/current1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="2dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:textSize="20sp"
                android:textColor="#009688"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="normal"
                android:text="Grade(maintain)"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="2dp"/>

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textSize="20sp"
                android:textColor="#009688"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/maintain1"

                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="2dp"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:textSize="20sp"
                android:textColor="#009688"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="normal"
                android:text="Grade(required)"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="2dp"/>

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textSize="20sp"
                android:textColor="#FF1100"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/required1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="2dp"/>

            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:textSize="20sp"
                android:textColor="#009688"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="normal"
                android:text="Semester(required)"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="2dp"/>

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textSize="20sp"
                android:textColor="#FF1100"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/required2"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="2dp"/>


    </LinearLayout>

    </LinearLayout>

</LinearLayout>